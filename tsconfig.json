{
    "compilerOptions": {
        "noEmit": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": true,
        "baseUrl": ".",
        "paths": {
            "@site/*": ["./*"],
        },
        "lib": ["ES2015", "DOM"],
        "module": "ES6",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "typeRoots": [
            "types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "types/**/*.d.ts"
    ]
}